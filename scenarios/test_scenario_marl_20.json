{
    "environment": 
    {
	    "num_channels": 10,
	    "max_steps": 100,
        "comments": [
            "\"Scenario 3\" from the MARL paper.",

            "10 channels.",
            "Two agents, and four constant-frequency entities.",
            "The observation modes vary, and the reward modes are all 'dsa' (target entities are irrelevant)."
        ],
        "agents": {
            "agent_1": {
                "observation_mode": "detect",
                "reward_mode": "dsa",
                "target_entity": null
            },
            "agent_2": {
                "observation_mode": "classify",
                "reward_mode": "dsa",
                "target_entity": null
            }
        }
    },
    "entities": 
    {
        "constant_freq_1": 
        {
            "type": "ConstantFreq",
            "channels": [0],
            "onoff": [1,1,0],
            "modem_params":
            {
                "type": "qam",
                "order": 16,
                "filter": "RRC",
                "center_frequency": [-0.1,0.1],
                "bandwidth": 0.25,
                "start": 0.25,
                "duration": 0.25
            }
        },
        "constant_freq_2":
        {
            "type": "ConstantFreq",
            "channels": [2],
            "onoff": [1,1,0],
            "modem_params":
            {
                "type": "psk",
                "order": 4,
                "filter": "RRC",
                "center_frequency": [-0.1,0.1],
                "bandwidth": 0.5,
                "start": 0.5,
                "duration": 0.25
            }
        },
        "constant_freq_3": 
        {
            "type": "ConstantFreq",
            "channels": [5],
            "onoff": [1,1,0],
            "modem_params":
            {
                "type": "qam",
                "order": 16,
                "filter": "RRC",
                "center_frequency": [-0.1,0.1],
                "bandwidth": 0.25,
                "start": 0.25,
                "duration": 0.25
            }
        },
        "constant_freq_4":
        {
            "type": "ConstantFreq",
            "channels": [7],
            "onoff": [1,1,0],
            "modem_params":
            {
                "type": "psk",
                "order": 4,
                "filter": "RRC",
                "center_frequency": [-0.1,0.1],
                "bandwidth": 0.5,
                "start": 0.5,
                "duration": 0.25
            }
        }
    },
    "render":
    {
        "render_mode": "pyqt",
        "render_fps": 100,
        "render_history": 20,
        "render_background": "black",
        "observation_mode": "classify"
    }
}